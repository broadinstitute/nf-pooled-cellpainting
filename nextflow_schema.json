{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/seqera-services/nf-pooled-cellpainting/master/nextflow_schema.json",
    "title": "seqera-services/nf-pooled-cellpainting pipeline parameters",
    "description": "A Nextflow pipeline for analysing optical pooled screens (OPS) data.",
    "type": "object",
    "$defs": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": ["input", "outdir", "barcodes", "fiji_stitchcrop_script"],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "file-path",
                    "exists": true,
                    "schema": "assets/schema_input.json",
                    "mimetype": "text/csv",
                    "pattern": "^\\S+\\.csv$",
                    "description": "Path to comma-separated file containing information about the samples in the experiment.",
                    "help_text": "You will need to create a design file with information about the samples in your experiment before running the pipeline. Use this parameter to specify its location. It has to be a comma-separated file with 3 columns, and a header row.",
                    "fa_icon": "fas fa-file-csv"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open"
                },
                "qc_painting_passed": {
                    "type": "boolean",
                    "description": "Flag to check whether quality control for the painting arm has been performed",
                    "fa_icon": "far fa-check-circle"
                },
                "qc_barcoding_passed": {
                    "type": "boolean",
                    "description": "Flag to check whether quality control for the barcoding arm has been performed",
                    "fa_icon": "fas fa-check-circle"
                },
                "barcodes": {
                    "type": "string",
                    "description": "Path to barcodes.csv file for SBS data.",
                    "fa_icon": "fas fa-qrcode"
                },
                "fiji_stitchcrop_script": {
                    "type": "string",
                    "default": "/home/florian/nf-pooled-cellpainting/bin/stitch_crop.env_master.py",
                    "description": "Path to script to use for FIJI Stitchcrop."
                },
                "range_skip": {
                    "type": "integer",
                    "default": 2,
                    "description": "Step number for subsampling images for segcheck."
                },
                "cycle_metadata_name": {
                    "type": "string",
                    "default": "Cycle",
                    "description": "What should the cycle metadata column be named? (Must align with cppipe cycle name!)"
                },
                "multiqc_title": {
                    "type": "string",
                    "description": "MultiQC report title. Printed as page header, used for filename if not otherwise specified.",
                    "fa_icon": "fas fa-file-signature"
                }
            }
        },
        "cellprofiler_group": {
            "title": "Cellprofiler Pipelines",
            "type": "object",
            "description": "Paths to custom cellprofiler pipeline files (cppipe)",
            "default": "",
            "properties": {
                "painting_illumcalc_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for painting illumination calculation."
                },
                "painting_illumapply_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for applying illumination profiles for painting arm."
                },
                "painting_segcheck_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for running segmentation QC check."
                },
                "barcoding_illumcalc_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for barcoding arm illumination calculation."
                },
                "barcoding_illumapply_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for illumination profiles for barcoding arm."
                },
                "barcoding_preprocess_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for barcoding preprocessing."
                },
                "combinedanalysis_cppipe": {
                    "type": "string",
                    "description": "Cellprofiler pipeline for combined analysis."
                }
            },
            "required": [
                "painting_illumcalc_cppipe",
                "painting_illumapply_cppipe",
                "painting_segcheck_cppipe",
                "barcoding_illumcalc_cppipe",
                "barcoding_illumapply_cppipe",
                "barcoding_preprocess_cppipe",
                "combinedanalysis_cppipe"
            ]
        },
        "painting_arm_parameters": {
            "title": "Painting arm parameters",
            "type": "object",
            "description": "Configuration options for the paintingarm of the pipeline.",
            "default": "",
            "properties": {
                "painting_round_or_square": {
                    "type": "string",
                    "default": "round",
                    "description": "Well shape for processing"
                },
                "painting_quarter_if_round": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to divide round wells into quarters for processing"
                },
                "painting_overlap_pct": {
                    "type": "integer",
                    "default": 10,
                    "description": "Image overlap percentage"
                },
                "painting_scalingstring": {
                    "type": "integer",
                    "default": 1,
                    "description": "Scaling for images."
                },
                "painting_imperwell": {
                    "type": "string",
                    "default": "unused",
                    "description": "Number of images per well."
                },
                "painting_rows": {
                    "type": "integer",
                    "default": 2,
                    "description": "Rows for image grid layout."
                },
                "painting_columns": {
                    "type": "integer",
                    "default": 2,
                    "description": "Columns for image grid layout."
                },
                "painting_stitchorder": {
                    "type": "string",
                    "default": "Grid: snake by rows",
                    "description": "Tile arrangement method."
                },
                "painting_xoffset_tiles": {
                    "type": "integer",
                    "default": 0,
                    "description": "Optional offsets for troubleshooting stitching misalignments."
                },
                "painting_yoffset_tiles": {
                    "type": "integer",
                    "default": 0,
                    "description": "Optional offsets for troubleshooting stitching misalignments."
                }
            },
            "fa_icon": "fas fa-paint-brush"
        },
        "barcoding_sequencing_by_synthesis_options": {
            "title": "Barcoding (Sequencing-by-synthesis) options",
            "type": "object",
            "description": "Configuration options for the barcoding (SBS) arm of the pipeline.",
            "default": "",
            "properties": {
                "barcoding_illumapply_grouping": {
                    "type": "string",
                    "default": "well",
                    "description": "What level to parallelize illumapply for barcoding arm.",
                    "enum": ["well", "site"]
                },
                "barcoding_round_or_square": {
                    "type": "string",
                    "default": "round",
                    "description": "Well shape for processing."
                },
                "barcoding_quarter_if_round": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to divide round wells into quarters for processing."
                },
                "barcoding_overlap_pct": {
                    "type": "integer",
                    "default": 10,
                    "description": "Image overlap percentage."
                },
                "barcoding_scalingstring": {
                    "type": "number",
                    "default": 1.99,
                    "description": "Scaling for images."
                },
                "barcoding_imperwell": {
                    "type": "string",
                    "default": "unused",
                    "description": "Number of images per well."
                },
                "barcoding_rows": {
                    "type": "integer",
                    "default": 2,
                    "description": "Rows for image grid layout."
                },
                "barcoding_columns": {
                    "type": "integer",
                    "default": 2,
                    "description": "Columns for image grid layout."
                },
                "barcoding_stitchorder": {
                    "type": "string",
                    "default": "Grid: snake by rows",
                    "description": "Tile arrangement method."
                },
                "barcoding_xoffset_tiles": {
                    "type": "integer",
                    "default": 0,
                    "description": "Optional offsets for troubleshooting stitching misalignments"
                },
                "barcoding_yoffset_tiles": {
                    "type": "integer",
                    "default": 0,
                    "description": "Optional offsets for troubleshooting stitching misalignments"
                },
                "barcoding_shift_threshold": {
                    "type": "integer",
                    "default": 50,
                    "description": "Shift threshold for barcoding align QC step."
                },
                "barcoding_corr_threshold": {
                    "type": "number",
                    "default": 0.9,
                    "description": "Correlation threshold for barcoding align QC step."
                },
                "acquisition_geometry_rows": {
                    "type": "integer",
                    "description": "Number of rows in acquisition geometry for QC spatial plots (square patterns).",
                    "default": 2
                },
                "acquisition_geometry_columns": {
                    "type": "integer",
                    "description": "Number of columns in acquisition geometry for QC spatial plots (square patterns).",
                    "default": 2
                }
            },
            "fa_icon": "fas fa-dna"
        },
        "general_pipeline_parameters_for_both_arms": {
            "title": "General pipeline parameters for both arms",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "tileperside": {
                    "type": "integer",
                    "default": 10,
                    "description": "Number of tiles to create along each axis."
                },
                "final_tile_size": {
                    "type": "integer",
                    "default": 5500,
                    "description": "Pixel dimensions for output tiles."
                },
                "compress": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to compress output files."
                }
            },
            "fa_icon": "fas fa-cog"
        },
        "institutional_config_options": {
            "title": "Institutional config options",
            "type": "object",
            "fa_icon": "fas fa-university",
            "description": "Parameters used to describe centralised config profiles. These should not be edited.",
            "help_text": "The centralised nf-core configuration profiles use a handful of pipeline parameters to describe themselves. This information is then printed to the Nextflow log when you run a pipeline. You should not need to change these values when you run a pipeline.",
            "properties": {
                "custom_config_version": {
                    "type": "string",
                    "description": "Git commit id for Institutional configs.",
                    "default": "master",
                    "hidden": true,
                    "fa_icon": "fas fa-users-cog"
                },
                "custom_config_base": {
                    "type": "string",
                    "description": "Base directory for Institutional configs.",
                    "default": "https://raw.githubusercontent.com/nf-core/configs/master",
                    "hidden": true,
                    "help_text": "If you're running offline, Nextflow will not be able to fetch the institutional config files from the internet. If you don't need them, then this is not a problem. If you do need them, you should download the files from the repo and tell Nextflow where to find them with this parameter.",
                    "fa_icon": "fas fa-users-cog"
                },
                "config_profile_name": {
                    "type": "string",
                    "description": "Institutional config name.",
                    "hidden": true,
                    "fa_icon": "fas fa-users-cog"
                },
                "config_profile_description": {
                    "type": "string",
                    "description": "Institutional config description.",
                    "hidden": true,
                    "fa_icon": "fas fa-users-cog"
                },
                "config_profile_contact": {
                    "type": "string",
                    "description": "Institutional config contact information.",
                    "hidden": true,
                    "fa_icon": "fas fa-users-cog"
                },
                "config_profile_url": {
                    "type": "string",
                    "description": "Institutional config URL link.",
                    "hidden": true,
                    "fa_icon": "fas fa-users-cog"
                }
            }
        },
        "cellprofiler_plugins": {
            "title": "Cellprofiler plugins",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "callbarcodes_plugin": {
                    "type": "string",
                    "default": "https://raw.githubusercontent.com/CellProfiler/CellProfiler-plugins/refs/heads/master/active_plugins/callbarcodes.py",
                    "description": "Cellprofiler plugin for calling barcodes."
                },
                "compensatecolors_plugin": {
                    "type": "string",
                    "default": "https://raw.githubusercontent.com/CellProfiler/CellProfiler-plugins/refs/heads/master/active_plugins/compensatecolors.py",
                    "description": "Cellprofiler plugin for compensating colors."
                }
            },
            "fa_icon": "fas fa-plug"
        },
        "generic_options": {
            "title": "Generic options",
            "type": "object",
            "fa_icon": "fas fa-file-import",
            "description": "Less common options for the pipeline, typically set in a config file.",
            "help_text": "These options are common to all nf-core pipelines and allow you to customise some of the core preferences for how the pipeline runs.\n\nTypically these options would be set in a Nextflow config file loaded for all pipeline runs, such as `~/.nextflow/config`.",
            "properties": {
                "version": {
                    "type": "boolean",
                    "description": "Display version and exit.",
                    "fa_icon": "fas fa-question-circle",
                    "hidden": true
                },
                "publish_dir_mode": {
                    "type": "string",
                    "default": "copy",
                    "description": "Method used to save pipeline results to output directory.",
                    "help_text": "The Nextflow `publishDir` option specifies which intermediate files should be saved to the output directory. This option tells the pipeline what method should be used to move these files. See [Nextflow docs](https://www.nextflow.io/docs/latest/process.html#publishdir) for details.",
                    "fa_icon": "fas fa-copy",
                    "enum": ["symlink", "rellink", "link", "copy", "copyNoFollow", "move"],
                    "hidden": true
                },
                "max_multiqc_email_size": {
                    "type": "string",
                    "description": "File size limit when attaching MultiQC reports to summary emails.",
                    "pattern": "^\\d+(\\.\\d+)?\\.?\\s*(K|M|G|T)?B$",
                    "default": "25.MB",
                    "fa_icon": "fas fa-file-upload",
                    "hidden": true
                },
                "monochrome_logs": {
                    "type": "boolean",
                    "description": "Do not use coloured log outputs.",
                    "fa_icon": "fas fa-palette",
                    "hidden": true
                },
                "multiqc_config": {
                    "type": "string",
                    "format": "file-path",
                    "description": "Custom config file to supply to MultiQC.",
                    "fa_icon": "fas fa-cog",
                    "hidden": true
                },
                "multiqc_logo": {
                    "type": "string",
                    "description": "Custom logo file to supply to MultiQC. File name must also be set in the MultiQC config file",
                    "fa_icon": "fas fa-image",
                    "hidden": true
                },
                "multiqc_methods_description": {
                    "type": "string",
                    "description": "Custom MultiQC yaml file containing HTML including a methods description.",
                    "fa_icon": "fas fa-cog"
                },
                "validate_params": {
                    "type": "boolean",
                    "description": "Boolean whether to validate parameters against the schema at runtime",
                    "default": true,
                    "fa_icon": "fas fa-check-square",
                    "hidden": true
                },
                "pipelines_testdata_base_path": {
                    "type": "string",
                    "fa_icon": "far fa-check-circle",
                    "description": "Base URL or local path to location of pipeline test dataset files",
                    "default": "https://raw.githubusercontent.com/nf-core/test-datasets/",
                    "hidden": true
                },
                "trace_report_suffix": {
                    "type": "string",
                    "fa_icon": "far calendar",
                    "description": "Suffix to add to the trace report filename. Default is the date and time in the format yyyy-MM-dd_HH-mm-ss.",
                    "hidden": true
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/input_output_options"
        },
        {
            "$ref": "#/$defs/cellprofiler_group"
        },
        {
            "$ref": "#/$defs/painting_arm_parameters"
        },
        {
            "$ref": "#/$defs/barcoding_sequencing_by_synthesis_options"
        },
        {
            "$ref": "#/$defs/general_pipeline_parameters_for_both_arms"
        },
        {
            "$ref": "#/$defs/institutional_config_options"
        },
        {
            "$ref": "#/$defs/cellprofiler_plugins"
        },
        {
            "$ref": "#/$defs/generic_options"
        }
    ]
}
