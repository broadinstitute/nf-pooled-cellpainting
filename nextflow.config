            orcid: '',
        ],
    ]
    homePage        = 'https://github.com/broadinstitute/nf-pooled-cellpainting'
    description     = """A Nextflow pipeline for analysing optical pooled screens (OPS) data."""
    mainScript      = 'main.nf'
    defaultBranch   = 'master'
    nextflowVersion = '!>=25.04.8 '
    version         = '1.0.0dev'
    doi             = ''
}

// Nextflow plugins
plugins {
    id 'nf-schema@2.4.2'
    id 'nf-boost@0.6.0'
}

validation {
    defaultIgnoreParams = ["genomes"]
    monochromeLogs      = params.monochrome_logs
    help {
        enabled             = true
        command             = "nextflow run broadinstitute/nf-pooled-cellpainting -profile <docker/singularity/.../institute> --input samplesheet.csv --outdir <OUTDIR>"
        fullParameter       = "help_full"
        showHiddenParameter = "show_hidden"
    }
}

// Load modules.config for DSL2 module specific options
includeConfig 'conf/modules.config'
