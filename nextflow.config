            orcid: '',
        ],
        [
            name: 'Erin Weissbart',
            affiliation: 'Broad Institute',
            github: '@ErinWeisbart',
            contribution: ['author', 'maintainer', 'contributor'],
            orcid: '',
        ],
        [
            name: 'Shantanu Singh',
            affiliation: 'Broad Institute',
            github: '@shntnu',
            contribution: ['author', 'maintainer', 'contributor'],
            orcid: '',
        ],
        [
            name: 'Ken Brewer',
            affiliation: 'Broad Institute',
